SELECT
    name,
    CASE
        WHEN CHARINDEX(' ', name) = 0 THEN name
        ELSE LEFT(name, CHARINDEX(' ', name) - 1)
    END AS firstname,
    CASE
        WHEN CHARINDEX(' ', name) = 0 THEN 'no Value'
        ELSE SUBSTRING(name, CHARINDEX(' ', name) + 1, LEN(name) - CHARINDEX(' ', name))
    END AS lastname
FROM
    your_table_name;
